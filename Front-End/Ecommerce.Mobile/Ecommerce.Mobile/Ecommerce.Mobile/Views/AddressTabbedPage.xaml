<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="Ecommerce.Mobile.Views.AddressTabbedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:Ecommerce.Mobile.Helpers.I18n"
    xmlns:local="clr-namespace:Ecommerce.Mobile.Views"
    xmlns:prism="http://prismlibrary.com"
    Title="{i18n:Translate AddressTabbedPage_Title}"
    prism:ViewModelLocator.AutowireViewModel="True"
    BindingContext="{Binding Page}">

    <TabbedPage.Children>
        <local:AddressListPage />
        <local:UserAddressPage />
    </TabbedPage.Children>
</TabbedPage>